{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/opt/homebrew/opt/llvm/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "-pedantic-errors",
                "-Wall",
                "-Weffc++",
                "-Wextra",
                "-Wconversion",
                "-Wsign-conversion",
                "-fopenmp",
                "-std=c++23",
                "-I/opt/homebrew/Cellar/nlohmann-json/3.11.3/include",
                "-I/opt/homebrew/Cellar/sfml/3.0.0/include",
                "${workspaceFolder}/src/**/*.cpp",  // All files in src and subdirectories
                "${workspaceFolder}/main.cpp",      // Explicitly include main.cpp
                "-L/opt/homebrew/Cellar/sfml/3.0.0/lib", // SFML library directory
                "-lsfml-graphics", // Link SFML librarires
                "-lsfml-window",
                "-lsfml-system",
                "-o",
                "${workspaceFolder}/main"  // Set output file to "main"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
